<?xml version="1.0" encoding="UTF-8"?>
<web-app>	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	
	<context-param>
		<param-name>annotation.server.base.url</param-name>
		<param-value>http://localhost:8080/yuma-server/api</param-value>
	</context-param>
	
	<context-param>
		<param-name>authentication.keystore.dir</param-name>
		<param-value>/opt/tomcat/webapps/yuma/keys</param-value>
	</context-param>

	<context-param>
		<param-name>sign.validity.period.seconds</param-name>
		<param-value>28800</param-value>
	</context-param>

	<context-param>
		<param-name>admin.page</param-name>
		<param-value>false</param-value>
	</context-param>
	
	<context-param>
		<param-name>website.capture.min.width</param-name>
		<param-value>800</param-value>
	</context-param>

	<context-param>
		<param-name>website.capture.target.path</param-name>
		<param-value>/opt/tomcat/webapps/yuma/captures</param-value>
	</context-param>
	
	<context-param>
		<param-name>tiles.root.path</param-name>
		 <param-value>C:/Workspaces/Yuma/client-suite/war/tiles</param-value>
	</context-param>
	
	<context-param>
		<param-name>map.kml.outlier.threshold</param-name>
		<param-value>3000</param-value>
	</context-param>

	<context-param>
		<param-name>enrichmentServiceUrl</param-name>
		<param-value>http://dme.arcs.ac.at/enrichmentService/</param-value>
	</context-param>

	<context-param>
		<param-name>openCalaisLicenceID</param-name>
		<param-value>5g58wjng8y3avpqubrnnhyn7</param-value>
	</context-param>

	<context-param>
		<param-name>map.google.api.key</param-name>
		<param-value>ABQIAAAAhScxmuV3ybzUgUXK5Hrc6BREhleYDHJKagFSHdQe6xjbhVCp5BSz22jHD-GiLjy3M2rOz689ph-BFg</param-value>
	</context-param>

	<servlet>
		<servlet-name>jspServlet</servlet-name>
		<servlet-class>org.apache.jasper.servlet.JspServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>jspServlet</servlet-name>
		<url-pattern>/image/annotate.jsp</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>jspServlet</servlet-name>
		<url-pattern>/image/annotate-tiled.jsp</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>annotation</servlet-name>
		<servlet-class>at.ait.dme.yuma.suite.core.server.annotation.AnnotationServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>annotation</servlet-name>
		<url-pattern>/image/annotation</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>authentication</servlet-name>
		<servlet-class>at.ait.dme.yuma.suite.core.server.auth.AuthenticationServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>authentication</servlet-name>
		<url-pattern>/image/auth</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>geocoder</servlet-name>
		<servlet-class>at.ait.dme.yuma.suite.image.server.map.GeocoderServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>geocoder</servlet-name>
		<url-pattern>/image/geocoder</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>findplace</servlet-name>
		<servlet-class>at.ait.dme.yuma.suite.image.server.map.FindPlaceServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>findplace</servlet-name>
		<url-pattern>/image/findplace</url-pattern>
	</servlet-mapping>
  
    <servlet>
        <servlet-name>semanticenrichment</servlet-name>
        <servlet-class>at.ait.dme.yuma.suite.core.server.enrichment.SemanticEnrichmentServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>semanticenrichment</servlet-name>
        <url-pattern>/image/semanticenrichment</url-pattern>
    </servlet-mapping>

	<servlet>
		<servlet-name>annotate</servlet-name>
		<jsp-file>/image/annotate.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>annotate</servlet-name>
		<url-pattern>/image/annotate</url-pattern>
	</servlet-mapping>
		
	<servlet>
		<servlet-name>importkml</servlet-name>
		<servlet-class>at.ait.dme.yuma.suite.image.server.map.KMLConverterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>importkml</servlet-name>
		<url-pattern>/image/importkml</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>tokml</servlet-name>
		<servlet-class>at.ait.dme.yuma.suite.image.server.map.ToKMLServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>tokml</servlet-name>
		<url-pattern>/image/tokml</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>tileset</servlet-name>
		<servlet-class>at.ait.dme.yuma.suite.image.server.tileset.TilesetServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>tileset</servlet-name>
		<url-pattern>/image/tileset</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>transformationServiceImpl</servlet-name>
		<servlet-class>at.ait.dme.yuma.suite.image.server.map.transformation.TransformationServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>transformationServiceImpl</servlet-name>
		<url-pattern>/image/transformation</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>mapMetadataServiceImpl</servlet-name>
		<servlet-class>at.ait.dme.yuma.suite.image.server.map.MapMetadataServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>mapMetadataServiceImpl</servlet-name>
		<url-pattern>/image/metadata</url-pattern>
	</servlet-mapping>

	<!--  restrict access to key store -->
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>key store</web-resource-name>
			<url-pattern>/keys/*</url-pattern>
		</web-resource-collection>
			<description>No Access</description>
		<auth-constraint>
			<role-name>restricted</role-name>
		</auth-constraint>
	</security-constraint>

	<security-role>
		<description>NO Access</description>
		<role-name>restricted</role-name>
	</security-role>

