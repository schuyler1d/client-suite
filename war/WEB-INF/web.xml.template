	</servlet>
	<servlet-mapping>
		<servlet-name>annotation</servlet-name>
		<url-pattern>/yuma/annotation</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>authentication</servlet-name>
		<servlet-class>at.ait.dme.yuma.suite.server.auth.AuthenticationServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>authentication</servlet-name>
		<url-pattern>/yuma/auth</url-pattern>
	</servlet-mapping>
	
	<servlet>
